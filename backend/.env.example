# Kahflane Backend Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Kahflane
DEBUG=true
API_V1_PREFIX=/api/v1

# Multi-tenancy
BASE_DOMAIN=localhost

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=xxx
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DB_HOST=xxx
DB_PORT=xxx
DB_USER=xxxx
DB_PASSWORD=xxx
DB_NAME=xx
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_HOST=xxx
REDIS_PORT=xxx
REDIS_USER=xxx
REDIS_PASSWORD=xxx
REDIS_DB=x

# Qdrant
QDRANT_HOST=xxx
QDRANT_PORT=xx
QDRANT_KEY=xxx

# Google AI (Gemini)
GOOGLE_API_KEY=xxxx

# ElevenLabs (Audio Transcription)
ELEVENLABS_API_KEY=xxx

# Storage                                                   
STORAGE_TYPE=s3
S3_BUCKET=global
S3_REGION=xxxx
S3_ENDPOINT=xxx
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx

# CORS (comma-separated list)
CORS_ORIGINS=["http://localhost:5000","http://localhost:8000","http://localhost:3000"]
